<Window xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="CalendarAvalonia.Views.NoteDialog"
    Width="300" Height="200"
    Title="Заметка к дню">
    <StackPanel Margin="10" Spacing="10">
        <TextBlock Text="Введите заметку:"/>
        <TextBox Name="NoteBox" AcceptsReturn="True" Height="80"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
            <Button Name="OkButton" Content="OK" Width="60"/>
            <Button Name="CancelButton" Content="Отмена" Width="60"/>
        </StackPanel>
    </StackPanel>
</Window>
